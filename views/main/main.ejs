<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>무드 구름 - 메인 페이지</title>
    <style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
    background: linear-gradient(135deg, #f8e1e7, #e1eaf8, #e1f8f4);
    min-height: 100vh;
    color: #555;
    padding-bottom: 50px;
    }
    
    .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    }
    
    /* 네비게이션 바 */
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    }
    
    .nav-logo {
      display: flex;
      align-items: center;
    }
    
    .nav-logo img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
    }
    
    .nav-logo h1 {
      font-size: 1.5rem;
      color: #b881c2;
      font-weight: 600;
    }
    
    .nav-links {
      display: flex;
      gap: 25px;
    }
    
    .nav-links a {
      text-decoration: none;
      color: #777;
      font-weight: 500;
      transition: color 0.3s;
    }
    
    .nav-links a:hover, .nav-links a.active {
      color: #b881c2;
    }
    
    .nav-profile {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .notification-icon {
      position: relative;
      cursor: pointer;
    }
    
    .notification-badge {
      position: absolute;
      top: -5px;
      right: -5px;
      background: #ff6b6b;
      color: white;
      font-size: 10px;
      width: 15px;
      height: 15px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .profile-image {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      background: #ddd;
      cursor: pointer;
    }
    
    /* 메인 헤더 */
    .header {
      margin-top: 40px;
      margin-bottom: 30px;
      text-align: center;
    }
    
    .date {
      font-size: 0.9rem;
      color: #888;
      margin-bottom: 10px;
    }
    
    .greeting {
      font-size: 1.8rem;
      color: #333;
      margin-bottom: 10px;
    }
    
    .mood-question {
      font-size: 1.2rem;
      color: #666;
    }
    
    /* 메인 레이아웃 */
    .main-content {
      display: grid;
      grid-template-columns: 3fr 1fr;
      gap: 30px;
    }
    
    /* 감정 선택 섹션 */
    .emotion-section {
      background: white;
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .section-title {
      font-size: 1.2rem;
      margin-bottom: 20px;
      color: #444;
      font-weight: 600;
    }
    
    .emotion-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }
    
    .emotion-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      cursor: pointer;
      transition: transform 0.3s;
    }
    
    .emotion-item:hover {
      transform: scale(1.05);
    }
    
    .emotion-icon {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 8px;
    }
    
    .happy {
      background: #FFEAA7;
    }
    
    .sad {
      background: #A3D8F4;
    }
    
    .angry {
      background: #FFB7B7;
    }
    
    .calm {
      background: #B5EAD7;
    }
    
    .anxious {
      background: #C7CEEA;
    }
    
    .tired {
      background: #E2D8F3;
    }
    
    .excited {
      background: #FFD8BE;
    }
    
    .confused {
      background: #D8E2DC;
    }
    
    .emotion-name {
      font-size: 0.9rem;
      color: #555;
    }
    
    /* 일기 작성 섹션 */
    .diary-write-section {
      background: white;
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      text-align: center;
    }
    
    .write-button {
      background: linear-gradient(135deg, #b881c2, #a06fb1);
      color: white;
      border: none;
      padding: 15px 40px;
      border-radius: 50px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 10px rgba(184, 129, 194, 0.3);
      margin: 20px 0;
    }
    
    .write-button:hover {
      background: linear-gradient(135deg, #a06fb1, #8e5ba0);
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(184, 129, 194, 0.4);
    }
    
    .template-suggestions {
      display: flex;
      gap: 10px;
      margin-top: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .template-tag {
      background: #f5f5f5;
      padding: 8px 15px;
      border-radius: 50px;
      font-size: 0.9rem;
      color: #666;
      cursor: pointer;
      transition: all 0.3s;
    }
    
    .template-tag:hover {
      background: #eaeaea;
      color: #b881c2;
    }
    
    /* 최근 일기 섹션 */
    .recent-diaries {
      background: white;
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    .diary-cards {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }
    
    .diary-card {
      background: #f9f9f9;
      border-radius: 10px;
      padding: 15px;
      transition: transform 0.3s, box-shadow 0.3s;
      cursor: pointer;
      position: relative;
    }
    
    .diary-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.05);
    }
    
    .diary-date {
      font-size: 0.8rem;
      color: #999;
      margin-bottom: 8px;
    }
    
    .diary-title {
      font-size: 1rem;
      color: #333;
      margin-bottom: 8px;
      font-weight: 600;
    }
    
    .diary-preview {
      font-size: 0.9rem;
      color: #666;
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .diary-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.8rem;
      color: #999;
    }
    
    .diary-emotion {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .diary-emotion-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
    }
    
    .diary-stats {
      display: flex;
      gap: 10px;
    }
    
    .diary-visibility {
      position: absolute;
      top: 15px;
      right: 15px;
      font-size: 0.8rem;
      color: #999;
    }
    
    /* 사이드바 */
    .sidebar {
      display: flex;
      flex-direction: column;
      gap: 25px;
    }
    
    .widget {
      background: white;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }
    
    /* 스트릭 위젯 */
    .streak-widget {
      text-align: center;
    }
    
    .streak-content {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 15px 0;
    }
    
    .streak-count {
      display: flex;
      flex-direction: column;
    }
    
    .streak-number {
      font-size: 2.5rem;
      font-weight: 700;
      color: #b881c2;
      line-height: 1;
    }
    
    .streak-text {
      font-size: 0.9rem;
      color: #888;
    }
    
    .streak-flame {
      font-size: 2.8rem;
      margin-left: 10px;
      filter: drop-shadow(0 0 3px rgba(255, 165, 0, 0.5));
    }
    
    .streak-calendar {
      display: flex;
      justify-content: space-between;
      margin: 15px 0;
    }
    
    .streak-day {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 0.8rem;
      background: #f5f5f5;
      color: #999;
    }
    
    .streak-day.completed {
      background: #b881c2;
      color: white;
    }
    
    .streak-day.today {
      background: white;
      border: 2px dashed #b881c2;
      color: #b881c2;
      font-weight: 600;
    }
    
    .streak-message {
      font-size: 0.85rem;
      color: #666;
      margin-top: 10px;
    }
    
    .streak-badges {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }
    
    .streak-badge {
      width: 30px;
      height: 30px;
      font-size: 1.2rem;
      opacity: 0.3;
    }
    
    .streak-badge.unlocked {
      opacity: 1;
    }
    
    /* 달력 위젯 */
    .calendar-widget {
      min-height: 250px;
    }
    
    .calendar-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }
    
    .calendar-month {
      font-weight: 600;
      color: #333;
    }
    
    .calendar-nav {
      display: flex;
      gap: 10px;
    }
    
    .calendar-nav span {
      cursor: pointer;
      color: #777;
    }
    
    .calendar-grid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 8px;
    }
    
    .calendar-day {
      text-align: center;
      font-size: 0.8rem;
      color: #999;
      padding: 5px 0;
    }
    
    .calendar-date {
      text-align: center;
      height: 30px;
      width: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 0.9rem;
      margin: 0 auto;
      position: relative;
    }
    
    .calendar-date.current {
      background: #b881c2;
      color: white;
      border-radius: 50%;
    }
    
    .calendar-date.has-diary::after {
      content: '';
      position: absolute;
      bottom: 2px;
      left: 50%;
      transform: translateX(-50%);
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: #b881c2;
    }
    
    /* 날씨 위젯 */
    .weather-widget {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .weather-icon {
      width: 60px;
      height: 60px;
      border-radius: 10px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2rem;
      background: linear-gradient(135deg, #e1eaf8, #f8e1e7);
    }
    
    .weather-info {
      flex: 1;
    }
    
    .weather-temp {
      font-size: 1.3rem;
      font-weight: 600;
      color: #333;
    }
    
    .weather-desc {
      color: #777;
      font-size: 0.9rem;
      margin-top: 3px;
    }
    
    .weather-location {
      font-size: 0.8rem;
      color: #999;
      margin-top: 3px;
    }
    
    /* 통계 위젯 */
    .stats-widget {
      min-height: 220px;
    }
    
    .mood-stats {
      display: flex;
      flex-direction: column;
      margin-top: 15px;
    }
    
    .mood-graph {
      height: 150px;
      background: #f9f9f9;
      border-radius: 10px;
      padding: 15px;
      position: relative;
    }
    
    .graph-labels {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 30px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 15px 0;
      color: #999;
      font-size: 0.7rem;
    }
    
    .graph-container {
      margin-left: 30px;
      height: 100%;
      display: flex;
      align-items: flex-end;
    }
    
    .graph-days {
      display: flex;
      margin-left: 30px;
      margin-top: 5px;
      justify-content: space-between;
    }
    
    .graph-day {
      font-size: 0.7rem;
      color: #999;
      width: 14.28%;
      text-align: center;
    }
    
    .mood-bar {
      height: 100%;
      width: 14.28%;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }
    
    .mood-segment {
      width: 70%;
      margin: 0 auto;
      border-radius: 3px;
    }
    
    .happy-segment {
      background: #FFEAA7;
    }
    
    .sad-segment {
      background: #A3D8F4;
    }
    
    .calm-segment {
      background: #B5EAD7;
    }
    
    .angry-segment {
      background: #FFB7B7;
    }
    
    .legend {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 15px;
      justify-content: center;
    }
    
    .legend-item {
      display: flex;
      align-items: center;
      font-size: 0.8rem;
      color: #777;
    }
    
    .legend-color {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 5px;
    }
    
    .view-more {
      font-size: 0.9rem;
      color: #b881c2;
      display: block;
      text-align: center;
      margin-top: 12px;
      text-decoration: none;
    }
    
    .view-more:hover {
      text-decoration: underline;
    }
    
    /* 푸터 */
    .footer {
      text-align: center;
      margin-top: 30px;
      color: #888;
      font-size: 0.9rem;
    }
    
    .inspiration-quote {
      font-style: italic;
      margin: 10px 0;
    }
    
    .quick-actions {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 15px;
    }
    
    .quick-action-btn {
      background: white;
      border: none;
      padding: 10px 20px;
      border-radius: 50px;
      font-size: 0.9rem;
      color: #666;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
    }
    
    .quick-action-btn:hover {
      background: #f5f5f5;
      color: #b881c2;
      transform: translateY(-2px);
    }
  </style>
</head>
