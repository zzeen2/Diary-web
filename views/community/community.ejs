// 모달 기능
document.getElementById('shareDiaryBtn').addEventListener('click', function() {
    document.getElementById('shareModal').style.display = 'flex';
});

document.querySelector('.close-modal').addEventListener('click', function() {
    document.getElementById('shareModal').style.display = 'none';
});

document.querySelector('.cancel-btn').addEventListener('click', function() {
    document.getElementById('shareModal').style.display = 'none';
});

// 뷰 전환 기능
const viewOptions = document.querySelectorAll('.view-option');

viewOptions.forEach(option => {
    option.addEventListener('click', function() {
    viewOptions.forEach(opt => opt.classList.remove('active'));
    this.classList.add('active');
    });
});

// 활성화된 배지에 스타일 적용
document.addEventListener('DOMContentLoaded', function() {
    const badges = document.querySelectorAll('.badge-item');
    badges.forEach(badge => {
    badge.style.display = 'flex';
    badge.style.gap = '10px';
    badge.style.alignItems = 'center';
    badge.style.margin = '10px 0';
    });
    
    const badgeIcons = document.querySelectorAll('.badge-icon');
    badgeIcons.forEach(icon => {
    icon.style.width = '40px';
    icon.style.height = '40px';
    icon.style.borderRadius = '50%';
    icon.style.background = '#f5f5f5';
    icon.style.display = 'flex';
    icon.style.justifyContent = 'center';
    icon.style.alignItems = 'center';
    icon.style.fontSize = '1.2rem';
    });
    
    const badgeInfos = document.querySelectorAll('.badge-info');
    badgeInfos.forEach(info => {
    info.style.flex = '1';
    });
    
    const badgeNames = document.querySelectorAll('.badge-name');
    badgeNames.forEach(name => {
    name.style.fontSize = '0.9rem';
    name.style.fontWeight = '600';
    name.style.color = '#555';
    });
    
    const badgeDescs = document.querySelectorAll('.badge-desc');
    badgeDescs.forEach(desc => {
    desc.style.fontSize = '0.8rem';
    desc.style.color = '#999';
    });
});
</script>